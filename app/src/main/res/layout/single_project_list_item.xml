<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:id="@+id/single_project_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textview_project_title"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ankit"
        android:layout_toRightOf="@+id/single_project_image"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_project_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_project_title"
        style="@style/ListItemText"
        android:text="Singh"
        android:layout_toRightOf="@+id/single_project_image"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/textview_project_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_project_author"
        style="@style/ListItemText"
        android:text="Singh"
        android:layout_toRightOf="@+id/single_project_image"
        android:paddingLeft="10dp" />
</RelativeLayout>